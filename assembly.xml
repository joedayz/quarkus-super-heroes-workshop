<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>quarkus-super-heroes-workshop</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>extensions</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>extension-banner/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/.idea/**</exclude>
                <exclude>*.iml</exclude>
                <exclude>*.settings</exclude>
                <exclude>*.classpath</exclude>
                <exclude>*.project</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>super-heroes</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>rest-fight/**</exclude>
                <exclude>rest-hero/**</exclude>
                <exclude>event-statistics/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/node/**</exclude>
                <exclude>**/node_modules/**</exclude>
                <exclude>**/dist/**</exclude>
                <exclude>**/.idea/**</exclude>
                <exclude>*.iml</exclude>
                <exclude>*.settings</exclude>
                <exclude>*.classpath</exclude>
                <exclude>*.project</exclude>
                <exclude>**/bootstrap.sh</exclude>
                <exclude>**/ObjectStore</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>pom.xml</include>
                <include>.editorconfig</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
